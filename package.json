{
  "name": "fgc-todo-mvp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node --test",
    "pw:install": "PLAYWRIGHT_BROWSERS_PATH=${PLAYWRIGHT_BROWSERS_PATH:-/tmp/ms-playwright} playwright install chromium",
    "test:e2e": "PLAYWRIGHT_BROWSERS_PATH=${PLAYWRIGHT_BROWSERS_PATH:-/tmp/ms-playwright} playwright test",
    "test:e2e:headed": "PLAYWRIGHT_BROWSERS_PATH=${PLAYWRIGHT_BROWSERS_PATH:-/tmp/ms-playwright} playwright test --headed",
    "ab:open": "AGENT_BROWSER_SOCKET_DIR=${AGENT_BROWSER_SOCKET_DIR:-/tmp/agent-browser-socket} AGENT_BROWSER_HOME=${AGENT_BROWSER_HOME:-/tmp/agent-browser-home} PLAYWRIGHT_BROWSERS_PATH=${PLAYWRIGHT_BROWSERS_PATH:-/tmp/ms-playwright} agent-browser open",
    "ab:snapshot": "AGENT_BROWSER_SOCKET_DIR=${AGENT_BROWSER_SOCKET_DIR:-/tmp/agent-browser-socket} AGENT_BROWSER_HOME=${AGENT_BROWSER_HOME:-/tmp/agent-browser-home} PLAYWRIGHT_BROWSERS_PATH=${PLAYWRIGHT_BROWSERS_PATH:-/tmp/ms-playwright} agent-browser snapshot -i --json",
    "ab:close": "AGENT_BROWSER_SOCKET_DIR=${AGENT_BROWSER_SOCKET_DIR:-/tmp/agent-browser-socket} AGENT_BROWSER_HOME=${AGENT_BROWSER_HOME:-/tmp/agent-browser-home} PLAYWRIGHT_BROWSERS_PATH=${PLAYWRIGHT_BROWSERS_PATH:-/tmp/ms-playwright} agent-browser close"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "agent-browser": "^0.11.1"
  }
}
